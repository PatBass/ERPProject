{# src/KGC/RdvBundle/Resources/views/Consultation/annulees.widget.html.twig #}

{% extends not app.request.isXmlHttpRequest() ? '::layout.html.twig' : '::emptylayout.html.twig' %}

{% block body %}
    {% embed '::widgetlayout.html.twig' %}
        
        {% use 'KGCRdvBundle::listefichesRDV.html.twig' %}
        
        {% set widget_options = {
            'titre' : 'Dernières consultations annulées',
            'header_class' : 'widget-header-small header-color-dark',
            'refresh' : '#rdv_annulees',
            'collapse' : true,
            'no_padding' : true,
        } %}

        {% block widget_main %}
            {% set actions = {
                1 : {
                    'color' : 'inverse'
                }
            } %}
            {% set fiches = liste %}
            {{ fiches|length > 0 ? block('tableau_fiches') : '<table class="table"><tr><td>Aucun résultat</td></tr><table>' }}
        {% endblock %}
    {% endembed %}
{% endblock body %}
