{# src/KGC/RdvBundle/Resources/views/Consultation/rechercher.widget.html.twig #}

{% extends 'KGCRdvBundle:Consultation:rechercher.widget.html.twig' %}

{% block search_type %}par dates{% endblock search_type %}

{% block search_target %}#rdv_date_recherche{% endblock search_target %}

{% block search_form %}
    <div class="col-lg-12 col-md-12 col-sm-12">
        <strong>Raccourcis :</strong>
        {{ form_widget(form.intervalle, {'attr': {'action-ajax':path('kgc_rdv_date_intervalle'), 'class':'inline-choices js-search-date-intervalle'} }) }}
        <div class="space-6"></div>
    </div>

    <div class="col-lg-5 col-md-12">
        <strong>Date de début :</strong>
        {{ form_widget(form.date_begin, {'attr': {'class':'js-search-date-begin'} }) }}
    </div>
    <div class="col-lg-5 col-md-12">
        <strong>Date de fin :</strong>
        {{ form_widget(form.date_end, {'attr': {'class':'js-search-date-end'} }) }}
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="space-6"></div>
        <div class="space-6"></div>
        <span class="input-group-btn">
            <button class="btn btn-purple btn-sm" type="submit">
                <i class="icon-search icon-on-right bigger-110"></i>
                Rechercher
            </button>
        </span>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="space-6"></div>
        {% if resultats | length %}
            <strong>{{ resultats | length }} résultat(s) trouvé(s)</strong>
        {% endif %}
        <div class="space-6"></div>
    </div>


    {{ form_rest(form) }}
{% endblock search_form %}
