{# src/KGC/RdvBundle/Resources/views/Encaissement/canceled.widget.html.twig #}

{% extends not app.request.isXmlHttpRequest() ? '::layout.html.twig' : '::emptylayout.html.twig' %}

{% block body %}
    {% embed '::widgetlayout.html.twig' %}

        {% use 'KGCRdvBundle::listefichesRDV.html.twig' %}

        {% set widget_options = {
        'titre' : title ~ ' - <b>'~ (rdvs|length) ~' résultats</b>',
        'header_class' : 'widget-header-small header-color-pink',
        'refresh' : '#rdv_j1_' ~ type,
        'collapse' : false,
        'collapsed' : false,
        'no_padding' : true,
        'compact' : true,
        'compacted' : true
        } %}

        {% block widget_main %}
            {% set actions = {
            1 : {
            'color' : 'inverse'
            }
            } %}
            {% set fiches = rdvs %}
            {{ fiches|length > 0 ? block('tableau_fiches') : '<table class="table"><tr><td>Aucun résultat</td></tr><table>' }}
        {% endblock %}
    {% endembed %}
{% endblock body %}