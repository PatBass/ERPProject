{# src/KGC/DashboardBundle/Resources/views/Config/mails.edit.list.html.twig #}

{% extends not app.request.isXmlHttpRequest() ? '::layout.html.twig' : '::emptylayout.html.twig' %}

{% block body %}
    {% embed '::modallayout.html.twig' %}
        {% block modal_header %}
            {% set link = {
                'txt' : (upd ? 'Ã‰dition' : 'Ajout') ~ ' de template de mail : ' ~ mail.code,
                'url' : path('kgc_config_mail_edit',{'id': mail.id }),
                'icon' : upd ? 'pencil' : 'plus'
            } %}
            {{ parent() }}
        {% endblock %}

        {% block modal_content %}
            <form id="mail_template_modal" method="post" action="{{ path('kgc_config_mail_edit', {'id': mail.id}) }}" {{ form_enctype(form) }} data-close="1" data-refresh="#config_mails" class="ajax_modal_form form-horizontal">
                {{ parent() }}
                {{ form_widget(form._token) }}
            </form>
        {% endblock modal_content %}

        {% block modal_body %}
            <div class="row">
                <div class="col-md-4">
                    <strong>Code :</strong><br />
                    {{ form_widget(form.code) }}
                </div>
                <div class="col-md-6">
                    <strong>Objet :</strong><br />
                    {{ form_widget(form.subject) }}
                </div>
                <div class="col-md-2">
                    <strong>Actif :</strong><br />
                    <div class="space-4"></div>
                    {{ form_widget(form.enabled) }}
                </div>
            </div>
            <div class="space-4"></div>
            <div class="row">
                <div class="col-md-12">
                    <strong>Remplacements :</strong><br />
                    {% if tchat is defined and tchat == 1 %}
                    [AUJOURDHUI], [PRENOM], [NOM], [ADRESSE1], [ADRESSE2], [TELEPHONE], [SITE], [LOGO]
                    {% else %}
                    [AUJOURDHUI], [DATE_CONSULTATION], [PRENOM], [NOM], [ADRESSE1], [ADRESSE2], [MONTANT], [MONTANT-TEXT], [MONTANTD], [MONTANTD-TEXT], [MONTANTDF], [MONTANTDF-TEXT], [MOYEN_PAIEMENT], [ARRANGEMENTS], [TELEPHONE], [LOGO], [IMAGE_PAIEMENT], [SITE], [VOYANT]
                    {% endif %}
                </div>
            </div>
            <div class="space-4"></div>
            <div class="row">
                <div class="col-md-12">
                    <strong>Message :</strong><br />
                    {{ form_widget(form.html) }}
                    {{ form_rest(form) }}
                    <div id="wysiwyg-editor-1" class="wysiwyg-editor"></div>
                </div>
            </div>
        {% endblock modal_body %}

        {% block modal_footer %}
            <div class="modal-footer">
                <div class="pull-left">
                    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><i class="icon-remove"></i> Fermer</button>
                </div>
                <div class="pull-right">
                    <button type="submit" class="btn btn-success btn-block btn-sm js-wysiwyg-btn">
                        <i class="icon-arrow-right"></i> Enregistrer
                    </button>
                </div>
            </div>
        {% endblock modal_footer %}
    {% endembed %}
{% endblock body %}
