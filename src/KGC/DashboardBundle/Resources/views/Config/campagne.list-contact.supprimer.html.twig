{# src/KGC/DashboardBundle/Resources/views/Config/sms.list.html.twig #}

{% extends not app.request.isXmlHttpRequest() ? '::layout.html.twig' : '::emptylayout.html.twig' %}

{% block body %}
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="blue bigger">Supprimer une liste de contact</h4>
            </div>
            {% if flag %}
                <form id="form_del_list" method="post" action="#" class="ajax_modal_form form-horizontal" {{ close ? 'data-close="1" data-refresh="config_list"'}}></form>
                <div class="modal-body overflow-visible">
                    <div class="row">
                        <div class="col-xs-12">
                            {% for message in app.session.flashbag.get('success') %}
                                <p class="alert alert-success">{{ message|raw }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm" data-dismiss="modal"><i class="icon-remove"></i> Fermer</button>
                </div>
            {% else %}
            <form id="form_del_list" method="post" action="{{ path('kgc_config_campagne_list_contact_delete', {'id':list.id}) }}" class="ajax_modal_form form-horizontal" {{ close ? 'data-close="1" data-refresh="config_list"'}}>
                <div class="modal-body overflow-visible">
                    <div class="row">
                        <div class="col-xs-12">
                            Êtes-vous sûr de vouloir supprimer la liste de contact &laquo; {{ list.name }} &raquo; ?
                            {{ form_rest(form) }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm" data-dismiss="modal"><i class="icon-remove"></i> Annuler</button>
                    <button type="submit" class="btn btn-sm btn-danger"><i class="icon-ok"></i> Confirmer</button>
                </div>
            </form>
            {% endif %}
        </div>
    </div>
{% endblock body %}
