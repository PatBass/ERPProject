{# src/KGC/DashboardBundle/Resources/views/Qualite/index.html.twig #}

{% extends "KGCDashboardBundle::layout.html.twig" %}

{% block ariane %}
    {% set fil = ['Recherche'] %}
    {{ parent() }}
{% endblock %}

{% block page_header %}
    <div class="page-header">
        <div class="pull-right">
            <a class="ajax_reload close" href="#elastic_search,#elastic_search_prospect,#elastic_search_client" title="Recharger">
                <i class="icon-refresh"></i>
            </a>
        </div>
        <h1>Recherche avanc√©e</h1>
    </div>
{% endblock %}

{% block dashboard_body %}
    <div class="row">
        {% if not tchat %}
        <div class="col-lg-12">
            <form method="post" action="{{ path('kgc_elastic_search_client_widget', {'request_view': 'client.search'}) }}" class="form-search form-search-ajax ajax_load" id="elastic_search_client"></form>
        </div>
        {% else %}
            <div class="col-lg-12">
                <form method="post" action="{{ path('kgc_elastic_search_client_widget', {'request_view': 'client.tchat.search'}) }}" class="form-search form-search-ajax ajax_load" id="elastic_search_client"></form>
            </div>
        {% endif %}
        <div class="space-6"></div>
        <div class="col-lg-12">
            <form method="post" action="{{ path('kgc_elastic_search_prospect',{'vue':'prospect.search'}) }}" class="form-search form-search-ajax ajax_load" id="elastic_search_prospect"></form>
        </div>
        {% if not tchat %}
            <div class="space-6"></div>
            <div class="col-lg-12">
                <form method="post" action="{{ path('kgc_elastic_search_rdv',{'request_view':'rdv.search'}) }}" class="form-search form-search-ajax ajax_load" id="elastic_search"></form>
            </div>
        {% endif %}
    </div>
{% endblock %}
