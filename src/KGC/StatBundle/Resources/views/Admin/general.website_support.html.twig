
{% extends not app.request.isXmlHttpRequest() ? '::layout.html.twig' : '::emptylayout.html.twig' %}

{% block body %}

<div class="widget-box">
    <div class="widget-header">
        <h5>
            <a href="#" data-action="collapse">
                <i class="icon-chevron-up"></i>
                {{ nature }}<b></b>
            </a>
        </h5>
        <div class="widget-toolbar">
            <a class="ajax_reload" href="#admin_stats_general_{{ group }}{{ id|default('') }}" title="Recharger">
                <i class="icon-refresh"></i>
            </a>
        </div>
    </div>
    <div class="widget-body stat-admin-general">
        <div class="widget-main no-padding">
            <table class="table table-striped table-condensed">
                <thead>
                <tr>
                    <th>&nbsp</th>
                    <th>Nb RDV</th>
                    <th>CA Réalisé</th>
                    <th>%</th>
                    <th>CA Encaissé</th>
                    <th>%</th>
                    <th>dont Récup</th>
                </tr>
                </thead>
                <tbody>
                {%  for headers,values in general_website_support  %}
                    <tr>
                        <td>{{ headers }}</td>
                        <td class="limit">{{ values.nb }} </td>
                        <td class="limit">{{ values.billing | number_format(2, ',', ' ')}} &euro;</td>
                        <td>{{ values.percentage_billing | number_format(2, ',', ' ')}} %</td>
                        <td class="limit">{{ values.paid | number_format(2, ',', ' ')}} &euro;</td>
                        <td>{{ values.percentage_paid | number_format(2, ',', ' ')}} %</td>
                        <td class="limit">{{ values.recup | number_format(2, ',', ' ')}} &euro;</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock body %}
