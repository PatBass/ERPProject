{% extends '::emptylayout.html.twig' %}

{% block body %}
    {% embed '::modallayout.html.twig' %}

        {% block modal_title %}
            Détails
        {% endblock modal_title %}

        {% block modal_body %}
            <table class="table table-striped valign-middle">
                <thead>
                    <tr>
                        {% if type == 'unsubscription' %}
                        <th>Date de désabonnement</th>
                        {% else %}
                        <th>Date d'abonnement</th>
                        {% endif %}
                        <th>Site</th>
                        <th>Mail</th>
                        <th>Prénom</th>
                        <th></th>
                    </tr>
                </thead>
                <tboby>
                {% for elem in list %}
                    <tr>
                        {% if type == 'unsubscription' %}
                        <td>{{ elem.desactivationDate|date('d/m/Y H:i') }}</td>
                        {% else %}
                        <td>{{ elem.subscriptionDate|date('d/m/Y H:i') }}</td>
                        {% endif %}
                        <td>{{ elem.website.libelle }}</td>
                        <td>{{ elem.client.mail }}</td>
                        <td>{{ elem.client.prenom }}</td>
                        <td class="line-actions">
                            <a data-original-title="Fiche client" href="{{ path('kgc_clients_show', {'id': elem.client.id}) }}" target="_blank" class="btn btn-xs btn-primary tooltip-primary" role="button" title="" data-rel="tooltip" data-placement="left"><i class="icon-file"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock modal_body %}
    {% endembed %}
{% endblock body %}
